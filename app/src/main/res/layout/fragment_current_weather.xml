<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainscreen.CurrentWeatherFragment"
    android:orientation="vertical"
    android:weightSum="4">

    <TextView
        android:id="@+id/greetings_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Greetings, "
        android:textAlignment="textStart"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/recommended_weather_icon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:contentDescription="@string/recommended_weather_icon"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/recommended_weather_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dsadsadsa"
        android:textAlignment="center"
        android:layout_weight="1" />

</LinearLayout>